<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F8"
    tools:context=".childminding">

    <Button
        android:id="@+id/Join_Us_Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="680dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="#0B7066"
        android:text="Join us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cookingButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="309dp"
        android:layout_marginBottom="667dp"
        android:backgroundTint="#0B7066"
        android:text="Cooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="361dp"
        android:layout_height="336dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="51dp"
        android:text="Child minding workers  play a important role in fostering child development, encouraging the development of essential skills, such as communication, patience, and problem-solving,     which can be useful in difference aspects of life. working with children often increases creativity and adapting, as caregiving frequently design engaging activities that cater to different needs and wants. Adding child minding work can offer flexible hours, making it easier for workers to balance their         professional and personal commitments. Overall, a career in child minding provides meaningful rewards, skill enhancement/improvement, and opportunities for personal growth."
        android:textColor="#2B3EA6"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="277dp"
        android:layout_height="163dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="452dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/childming" />

    <Button
        android:id="@+id/Garden_Mat_Button1"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="667dp"
        android:backgroundTint="#0B7066"
        android:text="Garden Matenance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSixMonthCourses"
        android:layout_width="122dp"
        android:layout_height="59dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="665dp"
        android:backgroundTint="#0B7066"
        android:text="Six-Month Courses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="200dp"
        android:textColor="#2B3EA6"
        android:layout_marginBottom="626dp"
        android:text="Child Minding"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>